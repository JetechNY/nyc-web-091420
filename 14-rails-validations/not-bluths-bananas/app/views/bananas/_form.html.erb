
<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end %>


<%= form_for @banana do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :toppings %>
  <%= f.text_field :toppings %>

  <%= f.label :price %>
  <%= f.number_field :price%>

  <%= f.submit %>
<% end %>