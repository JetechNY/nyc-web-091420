<h1>Order Form</h1>

<%= form_for @order do |f| %>
  <%= f.label :user_id %>
  <%= f.collection_select :user_id, @users, :id, :display_name_and_age %>

  <%= f.label :banana_id %>
  <%= f.collection_select :banana_id, @bananas, :id, :name %>

  <%= f.submit %>

<% end %>


